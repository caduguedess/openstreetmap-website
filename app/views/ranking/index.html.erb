<div class="inner22">
  <h2>Ranking</h2>
  <ol type="1">
    <% User.visible.ordered_by_ranking.each do |user| %>
      <li>
          <%= user_thumbnail_tiny(user, :width => 25, :height => 25) %>
    <b><%= user.display_name %></b> - <%= user.points %></li>

      <ul>
        <% user.badges.each do |badge| %>
          <li style="display: inline">
          <% if badge.name == 'changesets' %>
            <img src="https://img.icons8.com/color/25/000000/gold-medal--v1.png">
          <% end %>
          <% if badge.name == 'friends' %>
            <img src="https://img.icons8.com/cotton/25/000000/olympic-medal-silver.png">
          <% end %>
          </li>
        <% end %>
      </ul>
    <% end %>
  </ol>
  <ul>
    <li>Condecorações:</li>
    <li>
      <img src="https://img.icons8.com/color/48/000000/gold-medal--v1.png">
      <span>Mais de 10 conjuntos de contribuições</span>
    </li>
    <li>
      <img src="https://i.imgur.com/wRZM0eP.png">
      <span>Mais de 50 conjuntos de contribuições</span>
    </li>
    <li>
      <img src="https://img.icons8.com/cotton/48/000000/olympic-medal-silver.png">
      <span>Mais de 3 amigos</span>
    </li>
  </ul>
</div>
